<metal:module-core define-macro="module_core"
    i18n:domain="collective.modules"
    tal:define="checkPermission python:context.restrictedTraverse('portal_membership').checkPermission;">

    <section class="teaser-flow stack-ml teaser-flow-posts push-l module"
         tal:attributes="id python: 'module_' + context.getId();
                         class python: 'teaser-flow stack-ml teaser-flow-posts push-l module ' + view.module_class();">
        <div class="row">
            <div class="col-md-1 d-none d-md-block"></div>
            <div class="col-md-11 col-sm-12 mb-3" tal:condition="python: context.display_title and context.title">
                <h3 class="module__title strong sans-h6 a-center" tal:condition="python: context.title" tal:content="python: context.title">Title</h3>
                <p class="module__subtitle" tal:condition="python: context.description" tal:content="python: context.description">Description</p>
            </div>
        </div>

        <div class="row">
            <div class="col-md-1 d-none d-md-block"></div>

            <div class="col-sm-12 col-md-7 mb-4 text-container sans-t2 plain-txt"
                 tal:condition="python: context.text1">
                <div tal:replace="structure python:context.text1.output">
                    Text 1
                </div>
            </div>

            <div class="col-sm-12 col-md-4 mb-4 text-container sans-t2 plain-txt"
                 tal:condition="python: context.text2"
                 tal:content="structure python:context.text2.output">
                Text 2
            </div>

            <div class="col-md-1 d-none d-md-block"></div>
        </div>

        <div class="row">
            <div class="col-md-1 d-none d-md-block"></div>
            <div class="col-sm-12 col-md-7 mb-4"
                 tal:condition="python: context.text3">
                <p class="teaser-link sans-m2 strong">
                    <a class="btn-link btn-s btn-icon-left trim"
                       data-bs-toggle="collapse"
                       href="#collapseText"
                       role="button"
                       aria-expanded="false"
                       aria-controls="collapseText"
                       i18n:translate=""
                       tal:attributes="href python: '#collapse_' + context.id;
                                       aria-controls python: 'collapse_' + context.id">
                        <span i18n:translate="" class="text">Text weiterlesen</span>

                    </a>
                </p>
            </div>
        </div>

        <div class="row collapse"
             tal:condition="python: context.text3"
             tal:attributes="id python: 'collapse_' + context.id">
            <div class="col-md-1 d-none d-md-block"></div>
            <div class="col-sm-12 col-md-7 mb-3 text-container plain-txt"
                 tal:content="structure python:context.text3.output">
                Collapsed Text 3
            </div>
        </div>

        <div class="row">
            <div class="col-12 edit-module" tal:condition="python: checkPermission('Modify portal content', context)">
                <a class="btn btn-primary btn-sm  float-right"
                   tal:condition="python: checkPermission('Modify portal content', context)"
                   tal:attributes="href python: context.absolute_url() + '/edit'">
                    Edit Module
                </a>
            </div>
        </div>
    </section>

</metal:module-core>
